#!/usr/bin/env bash

set -e

###
# Commands
###

case "$1" in
        logs)
                docker service logs -n 100 -t --no-task-ids --no-resolve beamup_"$2" | awk '{$2=""; print $0}'
                ;;
        sync)
                /home/beamup/beamup-sync-swarm.sh
                ;;
        active-nodes)
                docker node ls | grep -i Active
                ;;
        server-stats)
                server-stats
                ;;
        projects)
                docker service ls
                ;;
        project-logs)
                docker service logs --raw -t beamup_"$2"
                ;;
        project-update)
                docker service update --force beamup_"$2"
                ;;
        projects-stats)
                docker stats --no-stream
                ;;
        *)
                echo "Invalid command"
                exit 1
                ;;
esac
